generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
 
}
model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  username  String     @unique
  password  String
  posts     Post[]
  bookmarks Bookmarks[]
}

// Post model
model Post {
  id        Int        @id @default(autoincrement())
  title     String
  content   String
  authorId  Int
  author    User       @relation(fields: [authorId], references: [id])
  bookmarks Bookmarks[]
}

// Bookmarks model
model Bookmarks {
  id           Int   @id @default(autoincrement())
  userId       Int
  postId       Int
  authorbookmark User  @relation(fields: [userId], references: [id])
  postauthor     Post  @relation(fields: [postId], references: [id])
}