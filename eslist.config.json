{
  "extends": [
    "next/core-web-vitals"
  ],
  "ignorePatterns": [
    "node_modules/",
    ".next/",
    "out/",
    "build/",
    "dist/",
    "lib/generated/**",
    "prisma/generated/**",
    "**/*.wasm.js",
    "**/.next/**",
    "**/node_modules/**"
  ],
  "rules": {
    "@typescript-eslint/no-unused-expressions": ["error", {
      "allowShortCircuit": true,
      "allowTernary": true,
      "allowTaggedTemplates": true
    }],
    "@typescript-eslint/no-unused-vars": ["warn", {
      "argsIgnorePattern": "^_",
      "varsIgnorePattern": "^_"
    }]
  }
}